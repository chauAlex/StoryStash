<p style="color: green"><%= notice %></p>

<%= render @article %>

<div>
  <% if user_signed_in? and current_user.id == @article.user_id %>
    <%= link_to "Edit this article", edit_article_path(@article) %> |
    <%= link_to "Back to articles", articles_path %>

    <%= button_to "Destroy this article", @article, method: :delete %>
  <% else %>
    <%= link_to "Back to articles", articles_path %>
  <% end %>
</div>

<h2>All Comments</h2>
<ul>
  <% @article.comments.each do |comment| %>
    <li>
      <p>
        <strong>User's email:</strong>
        <%= comment.email %>
      </p>
      <p>
        <strong>Comment Content:</strong>
        <%= comment.content %>
      </p>
      <p>
        <!-- <%= link_to "Show this comment", article_comment_path(@article, comment) %> -->
        <!-- <%= link_to "Show this comment", comment %> -->


        <% if defined?(@user) %>
          <%= link_to "Show this comment", user_article_comment_path(@user, @article, comment) %>
        <% else %>
          <%= link_to "Show this comment", artice_comment_path(@article, comment) %>
        <% end %>

      </p>
    </li>
  <% end %>
</ul>

<% if defined?(@user) %>
  <%= link_to "New Comment", new_user_article_comment_path(@user, @article) %>
<% else %>
  <%= link_to "New Comment", new_article_comment_path(@article) %>
<% end %>